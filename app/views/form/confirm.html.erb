<div class="page-header">
  <h1>お問い合わせ（入力内容の確認）</h1>
</div>
 
<%= form_for @form, :url => form_confirm_path do |f| %>

  <table class="table">
    <tr>
      <th>名前</th>
      <td>
        <%= f.hidden_field :name %>
        <%= @form.name %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td>
        <%= f.hidden_field :email %>
        <%= @form.email %>
      </td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td>
        <%= f.hidden_field :message %>
        <%= simple_format(@form.message) %>
      </td>
    </tr>
  </table>
 
<ul>
    <li><%= f.submit '修正', name: 'back', :class => 'btn btn-primary' %></li>
  </ul>
<% end %>


<%= form_for @form, :url => form_thanks_path do |f| %>

  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :message %>

<ul>
    <li><%= f.submit '送信', :class => 'btn btn-primary' %></li>
  </ul>
    

  <ul>
    <li><%= link_to 'TOPへ', root_path, {:class => "btn"} %></li>
  </ul>
  


<% end %>